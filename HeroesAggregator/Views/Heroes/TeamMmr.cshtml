@model HeroesAggregator.Scraping.Models.TeamModel

@{
    ViewBag.Title = "Team MMR - " + Model.Name;
}

<h1>@Model.Name</h1>

<div class="container-fluid">
    @if (Model.Name != null)
    {
        var players = Model.Players;
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-inverse">
                <tr>
                    <th></th>
                    <th>Player Name</th>
                    <th>Battle Tag</th>
                    <th>Hero League MMR</th>
                    <th>Team League MMR</th>
                    <th>Unranked Draft MMR</th>
                    <th>Weighted MMR</th>
                    <td>
                        <input type="checkbox" class="row-select-all" />
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var player in players)
                {
                    var target = "heroes-pref-" + player.PlayerName;

                    <tr id="@player.PlayerName" data-toggle="player-collapse" class="player-row" data-target=".@target">
                        <td><button class="collapse-player-row" data-target=".@target">Show/Hide Hero Stats</button></td>
                        <td>@player.PlayerName</td>
                        <td>@player.BattleTag</td>
                        <td>@( player.HeroLeagueMmr == -1 ? "" : player.HeroLeagueMmr.ToString() )</td>
                        <td>@( player.TeamLeagueMmr == -1 ? "" : player.TeamLeagueMmr.ToString() )</td>
                        <td>@( player.UnrankedDraftMmr == -1 ? "" : player.UnrankedDraftMmr.ToString() )</td>
                        <td class="weighted-mmr">@player.WeightedMmr</td>
                        <td>
                            <input type="checkbox" class="row-select" />
                        </td>
                    </tr>
                    <tr class="player-collapse @target">
                        <td>
                            <table class="table">
                                <thead>
                                    <th>Hero</th>
                                    <th>Games Played</th>
                                    <th>Win %</th>
                                </thead>
                                <tbody>
                                    @foreach (var heroPref in player.Stats.HeroStats)
                                    {
                                    <tr>
                                            <td>@heroPref.Name</td>
                                            <td>@heroPref.GamesPlayed</td>
                                            <td>@heroPref.WinPercent</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                         </td>
                    </tr>

                }
                </tbody>
            </table>

        <h3>@("Team MMR: " + Model.AverageMmr.ToString("0.00"))</h3>
        <h3 id="selected-mmr"></h3>
    }
    else
    { 
        <h1>Error</h1>
        <h3>Team does not exist</h3>
    }
    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Home")'">Back</button>
</div>
@section Scripts{
    <script src="~/Scripts/Heroes.js"></script>
}